{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}
<div class="container-fluid">
	<h1 class="text-center text-dark pt-4 display-1 fw-bold">Inscrivez-vous</h1>

	<div class="row justify-content-center">
		<div class="col rounded-5 col-md-4 mb-5 p-4 m-0" style="background-color: rgba(255, 255, 255, 0.8);">
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}

			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.ville) }}
			{{ form_row(registrationForm.adresse) }}
            {{ form_row(registrationForm.CP) }}
			{{ form_row(registrationForm.email) }}
            
			{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<div class="text-center">
				<button class="btn btn-outline-secondary text-dark m-4" type="submit">S'INSCRIRE</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</div>
{% endblock %}
